{
  "manifest_version": 3,
  "name": "VocabBreak - Language Learning Extension",
  "version": "1.0.1",
  "description": "Learn English vocabulary through strategic web interruptions. Gamified language learning that blocks websites.",
  
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "unlimitedStorage",
    "alarms",
    "identity"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "https://*.supabase.co/*",
    "https://nyxtigtweenrnsmaaoic.supabase.co"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.supabase.co wss://*.supabase.co"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "shared/error-handler.js",
        "shared/core-manager.js",
        "shared/supabase.js",
        "shared/setup-credentials.js",
        "shared/i18n.js",
        "shared/supabase-client.js",
        "shared/auth-manager.js",
        "shared/question-manager.js",
        "shared/gamification.js",
        "shared/site-filter.js",
        "content/blocker.js"
      ],
      "css": ["content/blocker.css"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "VocabBreak - Language Learning",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  
  "options_page": "options/options.html",
  
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "shared/*",
        "scripts/*",
        "_locales/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "default_locale": "en"
}


